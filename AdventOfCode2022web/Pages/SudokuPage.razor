@page "/SudokuPage"
@inherits PuzzleSolutionPage
@inject SudokuSolution PuzzleSolution
<h2>Sudoku Solver</h2>
<CascadingValue Name="PuzzleSolutionPage" Value=@this>
    <CascadingValue Name="PuzzleSolution" Value=@PuzzleSolution>
        <div class="row">
            <div class="col-lg-6">
                <SudokuView />
            </div>
            <div class="col-lg-6">
                <PuzzleCodeViewer PuzzleType=@(PuzzleSolution.GetType().Name) />
                <PuzzleInputForm />
                <PuzzleControler />
            </div>
        </div>
    </CascadingValue>
</CascadingValue>
