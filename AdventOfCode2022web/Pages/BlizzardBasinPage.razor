@page "/BlizzardBasinPage"
@inherits PuzzlePageBase
<h2>BlizzardBasinPage</h2>
<CascadingValue Name="Parent" Value=@this>
<div class="row">
    <div class="col-lg-6">
        <BlizzardBasinView AnimationDuration="1000" />
    </div>
    <div class="col-lg-6">
        <PuzzleInputForm/>
        <PuzzleControler/>
    </div>
</div>
</CascadingValue>
@code {
    public BlizzardBasin Puzzle = new BlizzardBasin();
    public override IIncrementalPuzzleSolver? PuzzleBase => (IIncrementalPuzzleSolver)Puzzle;
}
