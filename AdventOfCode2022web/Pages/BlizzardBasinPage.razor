@page "/BlizzardBasinPage"
@using Domain.BlizzardBasin
<PuzzleSolutionController PuzzleSolver="@_solution">
    @if (context.PuzzleOutput is not null && context.Settings is not null)
    {
        <BlizzardBasinVisualization Step=@context.PuzzleOutput.Step Info=@((BlizzardBasinInfo?)(context.PuzzleOutput.Info)) Settings="@context.Settings" />
        <DefaultVisualization PuzzleOutput="@context.PuzzleOutput" />
    }
</PuzzleSolutionController>
@code {
    BlizzardBasinSolution _solution = new();
}
